<div class="Table_User">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID_NhomQuuyen</th>
                <th scope="col">Tên nhóm quyền</th>
                <th scope="col">Quản lý nhân viên</th>
                <th scope="col">Quản lý nhóm quyền</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Group item in ViewBag.Groups)
            {
                <tr data-id="@item.GroupID">
                    <th>@item.GroupID</th>
                    <td>@item.GroupName</td>
                    @if (item.IsManagementUser == true)
                    {
                        <td>Có</td>
                    }
                    else
                    {
                        <td>Không</td>
                    }
                    @if (item.IsManagementGroup == true)
                    {
                        <td>Có</td>
                    }
                    else
                    {
                        <td>Không</td>
                    }
                    <td>
                        <!-- <p class="text-center btn-success "><a href="" class="text-white"><i class="bi bi-pencil-square" ></i></a></p> -->
                        <button type="button" class="btn btn-primary" data-id="@item.GroupID" id="btn_Sua" style=" width: 40px; height: 40px; margin: 5px;">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                        <!-- <p class="text-center btn-danger "><a href="" class="text-white"><i class="bi bi-person-x" ></i></a></p> -->
                        <button type="button" class="btn btn-primary" data-id="@item.GroupID" id="btn_Xoa" style=" width: 40px; height: 40px;">
                            <i class="bi bi-person-x"></i>
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

